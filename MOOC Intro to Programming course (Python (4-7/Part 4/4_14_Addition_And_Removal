list = []
number = 1
print(f"The list is now {list}")
while True:
    answer = input("a(d)d, (r)emove or e(x)it?")
    if answer == "d":
        list.append(number)
        print(f"The list is now {list}")
        number += 1
    elif answer == "r":
        list.remove(number-1)
        print(f"The list is now {list}")
        number -= 1
    elif answer == "x":
        print("Bye!")
        break