correct_code = 4321
attempts = 1

while True:
    code = int(input("PIN:"))
    if code == correct_code and attempts == 1:
        print("Correct! It only took you one single attempt!")
        break
    elif code != correct_code:
        attempts += 1
        print("Wrong")
    elif code == correct_code and attempts > 1:
        print(f"Correct! It took you {attempts} attempts")
        break
        